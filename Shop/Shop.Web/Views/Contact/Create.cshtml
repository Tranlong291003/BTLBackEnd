@model Shop.Model.Entities.Contact
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
	<!-- SubHeader =============================================== -->
<section class="parallax_window_in" data-parallax="scroll" data-image-src="https://media-cdn.tripadvisor.com/media/attractions-splice-spp-720x480/0b/3a/f4/c7.jpg" data-natural-width="1400" data-natural-height="470">
		<div id="sub_content_in">
			<div id="animate_intro">
				<h1>Liên hệ Bestours</h1>
			</div>
		</div>
	</section>
	<!-- End section -->
	<!-- End SubHeader ============================================ -->

	<section class="wrapper add_bottom_30">
		<div class="divider_border"></div>
		<div class="container">
			<div class="row">

				<aside class="col-md-3">
					<div class="box_style_2">
						<h4 class="nomargin_top">Thông tin liện hệ</h4>
						<p>
							Thanh Xuân, Hà nội
							<br> 0234 1234566
							<br>
							<a href="#">Bestour@gmail.com</a>
						</p>
						<hr class="styled">
					<h4>Nhân viên tư vấn</h4>
						<ul class="contacts_info">
							<li>Trần Khánh Long
								<br>
								<a href="tel://003823932342">0889 112 490</a>
								<br><a href="tel://003823932342">Khanhlong@bestour.com</a>
								<br>
								<small>Thứ 2- Thứ7 9SA - 7CH</small>
							</li>
							<li>Nguyễn Mạnh Nguyên
								<br>
								<a href="tel://003823932342">0898 200 744</a>
								<br><a href="tel://003823932342">questions@lovefit.com</a>
								<br>
							<p>
								<small>Thứ 2- Thứ7 9SA - 7CH</small>
								</p>
							</li>
						</ul>
					</div>
				</aside>
				<!--End aside -->

				<div class="col-md-9">
				<h3>Liên hệ chúng tôi</h3>
					<div>
						<div id="message-contact"></div>
					<form action="/Contact/Create" method="post" class="row g-3">
						<div class="col-12">
							<label asp-for="Name" class="form-label">Họ và tên</label>
							<input asp-for="Name" class="form-control" />

						</div>
						<div class="col-12">
							<label asp-for="Adress" class="form-label">Địa chỉ</label>
							<input asp-for="Adress" class="form-control" />

						</div>
						<div class="col-12">
							<label asp-for="Email" class="form-label">Email</label>
							<input asp-for="Email" class="form-control" />

						</div>
						<div class="col-12">
							<label asp-for="Phone" class="form-label">Số điện thoại</label>
							<input asp-for="Phone" class="form-control" />
						</div>
						<div class="col-12">
							<label asp-for="Message" class="form-label">Ghi chú</label>
							<input asp-for="Message" class="form-control" />
						</div>
						<div class="text-center">
							<button type="submit" class="btn btn-primary" onclick="return confirm('Sau khi gửi thành công bạn sẽ trở về trang chủ')" >Gửi</button>
							<button type="reset" class="btn btn-secondary">Hủy</button>
						</div>
					</form>
					</div>
			</div>
			<!-- End row -->
		</div>
		<!-- End container -->
	</section>
	<!-- End section -->
	<!-- COMMON SCRIPTS -->
	<script src="~/js/jquery-2.2.4.min.js"></script>
	<script src="~/js/common_scripts_min.js"></script>
	<script src="~/assets/validate.js"></script>
	<script src="~/js/jquery.tweet.min.js"></script>
	<script src="~/js/functions.js"></script>

	<!-- SPECIFIC SCRIPTS -->
	<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
	<script type="text/javascript" src="~/js/mapmarker.jquery.js"></script>
	<script type="text/javascript" src="~/js/mapmarker_func.jquery.js"></script>