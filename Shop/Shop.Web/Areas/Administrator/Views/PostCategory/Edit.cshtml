@model Shop.Model.Entities.PostCategory
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h1><center><b>Cập nhật loại bài viết</b></center></h1>
            <form action="/Administrator/PostCategory/Edit" method="post" class="row g-3">
                <div class="col-12">
                    <label asp-for="Id" class="form-label">ID</label>
                    <input asp-for="Id" class="form-control" value="@Model.Id" />
                </div>
                <div class="col-12">
                    <label asp-for="Name" class="form-label">Tên loại bài viết</label>
                    <input asp-for="Name" class="form-control" value="@Model.Name" />
                </div>
                <div class="col-12">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                     <input asp-for="Description" class="form-control" value="@Model.Name" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                    <button type="reset" class="btn btn-secondary">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>
