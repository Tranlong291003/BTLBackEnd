@model Shop.Model.Entities.ProductCategory
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h1><center><b>Thêm mới loại tour</b></center></h1>
            <form action="/Administrator/ProductCategory/Create" method="post" class="row g-3">
                <div class="col-12">
                    <label asp-for="Id" class="form-label">ID</label>
                    <input asp-for="Id" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Name" class="form-label">Loại tour</label>
                    <input asp-for="Name" class="form-control" />

                </div>
                <div class="col-12">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <input asp-for="Description" class="form-control" />

                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                    <button type="reset" class="btn btn-secondary">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>
