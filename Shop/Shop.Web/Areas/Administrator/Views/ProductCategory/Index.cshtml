@model List<Shop.Model.Entities.ProductCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h1><center><b>Danh sách loại tour</b></center></h1>
            <a href="/Administrator/ProductCategory/Create" class="btn btn-primary mb-2">Thêm mới</a>
            <table id="myTable" class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên loại Tour</th>
                        <th>Mô tả</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="/Administrator/ProductCategory/Edit/@item.Id"><i class="bi bi-brush-fill">Sửa</i></a>
                                <a href="/Administrator/ProductCategory/Delete/@item.Id" onclick="return confirm('Bạn có chắc muốn xóa loại này không ?');"><i class="bi bi-basket-fill">Xóa</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
